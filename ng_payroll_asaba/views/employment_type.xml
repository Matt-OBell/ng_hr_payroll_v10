<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_employment_type_tree" model="ir.ui.view">
            <field name="name">view.employment.type.tree</field>
            <field name="model">employment.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="base"/>
                </tree>
            </field>
        </record>

        <record id="view_employment_type_form" model="ir.ui.view">
            <field name="name">view.employment.type.form</field>
            <field name="model">employment.type</field>
            <field name="arch" type="xml">
                <form string="Employment Type">
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="base"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_employment_type" model="ir.actions.act_window">
            <field name="name">Employment Type</field>
            <field name="res_model">employment.type</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem
                id="menu_employment_type"
                parent="hr.menu_human_resources_configuration"
                sequence="3"
                action="action_employment_type"
                string="Employment Type"
                />
    </data>
</odoo>