<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <!--Employees Schools tree view-->
        <record id="employee_school_tree_view" model="ir.ui.view">
            <field name="name">employee.school.tree.view</field>
            <field name="model">employee.school</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="address"/>
                </tree>
            </field>
        </record>

        <record id="employee_school_form_view" model="ir.ui.view">
            <field name="name">employee.school.form.view</field>
            <field name="model">employee.school</field>
            <field name="arch" type="xml">
                <form string="Schools">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="address"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="employee_school_action" model="ir.actions.act_window">
            <field name="name">School</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.school</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
                  Click here to add a school
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

        <menuitem
                id="employee_school_menu"
                name="Schools"
                parent="hr.menu_human_resources_configuration"
                action="employee_school_action"
                sequence=""
        />

    </data>
</odoo>