<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Step Tree View -->
        <record id="view_emp_step_tree" model="ir.ui.view">
            <field name="name">view.emp.step.tree</field>
            <field name="model">emp.step</field>
            <field name="arch" type="xml">
                <tree string="Employee Step Tree View">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Step Form View -->
        <record id="view_emp_step_form" model="ir.ui.view">
            <field name="name">view.emp.step.form</field>
            <field name="model">emp.step</field>
            <field name="arch" type="xml">
                <form string="Employee Step Form View">
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

       <!-- Step Action -->
        <record id="employee_step_action" model="ir.actions.act_window">
            <field name="name">Step</field>
            <field name="res_model">emp.step</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click here to create step</p>
            </field>
        </record>

        <!-- Add employee step menu under configuration -->
        <menuitem id="employee_step" name="Step" parent="hr_payroll.menu_hr_payroll_configuration" action="employee_step_action"/>

    </data>
</odoo>
