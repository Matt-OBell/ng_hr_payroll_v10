<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <!-- Grade Tree View -->
        <record id="view_emp_grade_tree" model="ir.ui.view">
            <field name="name">view.emp.grade.tree</field>
            <field name="model">emp.grade</field>
            <field name="arch" type="xml">
                <tree string="Grade Tree View">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Grade Form View -->
        <record id="view_emp_grade_form" model="ir.ui.view">
            <field name="name">view.emp.grade.form</field>
            <field name="model">emp.grade</field>
            <field name="arch" type="xml">
                <form string="Grade Form View">
                    <group>
                        <field name="name"/>
                        <field name="step_ids"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Grade Level Action -->
        <record id="employee_grade_action" model="ir.actions.act_window">
            <field name="name">Grade</field>
            <field name="res_model">emp.grade</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click here to create grade</p>
            </field>
        </record>

        <!-- Add employee grade menu under configuration -->
        <menuitem id="employee_grade" name="Grade" parent="hr_payroll.menu_hr_payroll_configuration" action="employee_grade_action"/>

    </data>
</odoo>
