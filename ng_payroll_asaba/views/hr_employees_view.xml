<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="view_hr_employee_form" model="ir.ui.view">
            <field name="name">view.hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="get_retire" type="object" string="Retire" groups="base.group_no_one"/>
                    </header>
                </xpath>

                <xpath expr="//sheet//field[@name='category_ids']" position="before">
                    <group>
                        <field name="auto_staff_id"/>
                        <field name="month_increment"/>
                        <field name="employment_type_id"/>
                    </group>
                </xpath>

                <xpath expr="//notebook//page[1]/group" position="after">
                    <!-- Add your fields or attributes here -->
                    <group>
                        <group string="Retirement Information">
                            <field name="date_appointment"/>
                            <field name="date_retirement"/>
                            <field name="date_present_appointment"/>
                            <separator string="Department Sector Info" colspan="4"/>
                            <div>
                                <div>
                                    <label for="department_sector_id" class="oe_inline"/>
                                    <field name="department_sector_id" widget="selection" class="oe_inline" placeholder="Department Sector ..."/>
                                </div>
                                <div>
                                    <label for="grade_id" class="oe_inline"/>
                                    <field name="grade_id" widget="selection" placeholder="Grade ..." class="oe_inline"/>
                                </div>
                                <div>
                                    <label for="step_id" class="oe_inline"/>
                                    <field name="step_id" widget="selection" placeholder="Step ..." class="oe_inline"/>
                                </div>
                            </div>
                        </group>
                        <group string="Biometric Info">
                            <field name="capture"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
