<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="notification_employee_retirement" model="mail.template">
            <field name="name">Employee Retirement Notification</field>
            <field name="model_id" ref="ng_payroll_asaba.model_hr_employee"/>
            <field name="subject">Employees Due for Retirement Today</field>
            <field name="auto_delete" eval="True"/>
            <field name="email_from">oebabawale@rocketmail.com</field>
            <field name="email_to">oebabawale@rocketmail.com</field>
            <field name="body_html">
                <![CDATA[
                <div style="font-family: 'Times New Roma', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: #000000; background-color: #ffffff; ">
                    <h3>Dear ${ctx.get('recipient_name')},</h3>
                    <p> &nbsp; &nbsp; &nbsp; &nbsp; This is to notify you of the following employees due for retirement today</p>

                    <p>Thank you.</p>

                    <p>Regards,<br/>
                    <p>Administrator</p>

                    <p>This is a system auto-generated email. Please do not reply.</p>
                </div>
                ]]>
            </field>
        </record>

        <record id="ir_cron_employee_retirement" model="ir.cron">
            <field name="name">Retirement Notification</field>
            <field name="model_id" ref="ng_payroll_asaba.model_hr_employee"/>
            <field name="state" eval="'code'" />
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
            <field name="code">model.get_retire()</field>
        </record>

    </data>
</odoo>